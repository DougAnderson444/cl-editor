{
  "name": "cl-editor",
  "version": "1.0.9",
  "description": "Lightweight text editor built with svelte + typescript",
  "scripts": {
    "copy": "copyfiles ./index.html ./dist",
    "serve": "live-server ./ --port=3000",
    "dev": "rollup -c rollup.config.dev.js",
    "dev:w": "concurrently \"npm run dev -- -w\" \"npm run serve\"",
    "prod": "rollup -c rollup.config.dev.js && rollup -c rollup.config.prod.js",
    "prepublishOnly": "npm run prod"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nenadpnc/cl-text-editor"
  },
  "keywords": [
    "html text editor",
    "svelte",
    "typescript"
  ],
  "author": "nenadpnc",
  "license": "MIT",
  "homepage": "https://nenadpnc.github.io/cl-text-editor/",
  "dependencies": {},
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-runtime": "^6.26.0",
    "bundlesize": "^0.15.3",
    "concurrently": "^3.5.0",
    "copyfiles": "^1.0.0",
    "install": "^0.8.2",
    "live-server": "^1.1.0",
    "rollup": "^0.50.0",
    "rollup-plugin-babel": "^3.0.2",
    "rollup-plugin-commonjs": "^8.2.4",
    "rollup-plugin-filesize": "^1.4.2",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-svelte": "^3.1.0",
    "rollup-plugin-typescript": "^0.8.1",
    "rollup-plugin-uglify": "^2.0.1",
    "rollup-watch": "^4.3.1",
    "typescript": "^2.3.4"
  },
  "main": "./dist/index.js",
  "types": "./src/Editor.html.d.ts",
  "bundlesize": [
    {
      "path": "./dist/index.js",
      "maxSize": "10 kB"
    }
  ]
}
