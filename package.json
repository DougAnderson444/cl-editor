{
  "name": "cl-editor",
  "version": "2.0.0",
  "description": "Lightweight text editor built with svelte + typescript",
  "scripts": {
    "dev": "concurrently \"rollup -c rollup.config.prod.js \" \"live-server ./dist/ --port=3000\"",
    "prod": "rollup -c rollup.config.prod.js",
    "test": "mocha",
    "prepublishOnly": "npm run prod"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nenadpnc/cl-editor"
  },
  "keywords": [
    "html text editor",
    "wysiwyg",
    "wysiwyg-html-editor",
    "svelte",
    "typescript"
  ],
  "author": "nenadpnc",
  "license": "MIT",
  "homepage": "https://nenadpnc.github.io/cl-editor/",
  "dependencies": {
    "svelte": "^3.23.2",
    "svelte-ts-preprocess": "^1.1.3"
  },
  "devDependencies": {
    "@babel/core": "^7.8.4",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-plugin-istanbul": "^6.0.0",
    "babel-preset-env": "^1.7.0",
    "babel-runtime": "^6.26.0",
    "browser-env": "^3.3.0",
    "bundlesize": "^0.18.0",
    "chai": "^4.2.0",
    "concurrently": "^5.1.0",
    "copyfiles": "^2.0.0",
    "cross-env": "^7.0.0",
    "install": "^0.13.0",
    "istanbul": "^0.4.5",
    "live-server": "^1.2.1",
    "mocha": "^8.0.1",
    "rollup": "^2.18.1",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-filesize": "^9.0.1",
    "rollup-plugin-istanbul": "^2.0.1",
    "rollup-plugin-livereload": "^1.3.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-svelte": "^5.2.3",
    "rollup-plugin-terser": "^6.1.0",
    "rollup-plugin-typescript": "^1.0.1",
    "rollup-plugin-uglify": "^6.0.4",
    "rollup-watch": "^4.3.1",
    "sinon": "^9.0.2",
    "typescript": "^3.9.5"
  },
  "main": "./dist/index.js",
  "svelte": "./src/Editor.svelte",
  "types": "./src/Editor.svelte.d.ts",
  "files": [
    "dist/*.js",
    "dist/*.map",
    "src/**/*"
  ],
  "bundlesize": [
    {
      "path": "./dist/index.min.js",
      "maxSize": "10 kB"
    }
  ]
}
